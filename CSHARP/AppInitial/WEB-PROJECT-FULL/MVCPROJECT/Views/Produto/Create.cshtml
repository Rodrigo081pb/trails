@page
@model IEnumerable<MVCPROJECT.Models.Produto>
@{
    ViewData["Title"] = "Adicionar";
}

<h2>Adicionar produto</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" required></input>
    </div>

    <div class="form-group">
        <label for="Preco">Preço</label>
        <input type="number" class="form-control" id="Preco" step="0.01" name="Preco" required/>
    </div>

    <button type="submit" class="btn btn-sucess">Salvar</button>

    <a asp-action="Index" class="btn btn-primary">Voltar</a>

</form>