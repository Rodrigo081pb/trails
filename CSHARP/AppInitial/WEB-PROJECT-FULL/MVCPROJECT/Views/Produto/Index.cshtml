@model IEnumerable<MVCPROJECT.Models.Produto>
@{
    ViewData["Title"] = "Lista de Produtos"; 
}

<h2>Lista de produtos</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var produtos in Model)
        {
            <tr>
                <td>@produtos.Id</td>
                <td>@produtos.Nome</td>
                <td>@produtos.Preco</td>
                <td>                    
                    @*Ação para criar um produto*@


                    <a asp-action="Edit" asp-route-id="@produtos.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@produtos.Id">Excluir</a>

                </td>
            </tr>
        }
    
    </tbody>

</table>